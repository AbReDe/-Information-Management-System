@model SmartCourseSelectorWeb.Models.LoginViewModel

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(to right, #8B0000, #ffffff); /* Bordo ve beyaz gradient */
        margin: 0;
    }

    .login-container {
        background: rgba(255, 255, 255, 0.95);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.8rem;
            color: #8B0000; /* Bordo renk */
        }

    .role-selection {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-bottom: 20px;
    }

        .role-selection label {
            cursor: pointer;
            text-align: center;
        }

        .role-selection img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            border: 2px solid transparent;
            transition: border 0.3s;
        }

        .role-selection input {
            display: none;
        }

            .role-selection input:checked + img {
                border: 4px solid #8B0000; /* Bordo renk */
            }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            color: #8B0000; /* Bordo renk */
        }

    .btn-login {
        font-size: 1.2rem;
        padding: 10px;
        background: #8B0000; /* Bordo renk */
        border: none;
        color: white;
        width: 100%;
        border-radius: 5px;
        transition: background 0.3s;
    }

        .btn-login:hover {
            background: #660000; /* Daha koyu bordo */
        }

    .forgot-password {
        text-align: center;
        margin-top: 15px;
    }

        .forgot-password a {
            color: #8B0000; /* Bordo renk */
            text-decoration: none;
        }

            .forgot-password a:hover {
                text-decoration: underline;
            }

    .error-message {
        color: red;
        text-align: center;
        margin-top: 10px;
    }
</style>

<div class="login-container">
    <h2>KTU BYS</h2>
    <form asp-action="LoginUser" method="post" id="loginForm">
        <div class="role-selection">
            <label>
                <input asp-for="Role" type="radio" value="Student" checked />
                <img src="~/images/Students.png" alt="Student" />
                <div>Student</div>
            </label>
            <label>
                <input asp-for="Role" type="radio" value="Advisor" />
                <img src="~/images/Teachers.png" alt="Advisor" />
                <div>Advisor</div>
            </label>
        </div>

        <div class="form-group">
            <label for="Username">Username</label>
            <input asp-for="Username" class="form-control" id="Username" placeholder="Enter your username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-login">Login</button>
        <div class="forgot-password">
            <a href="@Url.Action("ForgotPassword", "Account")">Forgot Password</a>
        </div>
    </form>

    @if (ViewBag.Message != null)
    {
        <p class="error-message">@ViewBag.Message</p>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
