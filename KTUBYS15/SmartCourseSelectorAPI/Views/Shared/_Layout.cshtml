<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - IMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #fff;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .content-container {
            max-width: 80%;
            width: 60%;
            background-color: #8B0000; /* Bordo renk */
            color: #fff; /* Beyaz yazı */
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            margin: auto;
        }

        h2, h4 {
            color: #fff; /* Beyaz yazı */
            font-weight: bold;
        }

        p, .alert, table, th, td {
            color: #fff; /* Beyaz yazı */
        }

        .btn-primary {
            background-color: #fff; /* Beyaz arka plan */
            border: none;
            color: #8B0000; /* Bordo yazı */
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease-in-out;
            text-decoration: none;
        }

            .btn-primary:hover {
                background-color: #ddd; /* Açık gri arka plan */
                color: #8B0000; /* Bordo yazı */
            }

        .back-link {
            color: #fff; /* Beyaz yazı */
            text-decoration: none;
            font-size: 1rem;
            margin-top: 15px;
            display: inline-block;
        }

            .back-link:hover {
                text-decoration: underline;
            }

        footer {
            margin-top: auto;
            padding: 20px 0;
            text-align: center;
            background-color: #8B0000; /* Bordo arka plan */
            color: #fff; /* Beyaz yazı */
            width: 100%;
        }

            footer::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 4px;
                background-color: #ddd; /* Açık gri */
            }
    </style>
</head>
<body>
    <div class="content-container">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            &copy; @DateTime.Now.Year - IMS
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
